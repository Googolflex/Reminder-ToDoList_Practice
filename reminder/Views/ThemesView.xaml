<UserControl x:Class="reminder.Views.ThemesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:reminder.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
        <StackPanel x:Name="ThemesPanel"
                    Orientation="Vertical"
                    Margin="10,10,0,0">

            <Button x:Name="StTheme"
                    Style="{StaticResource TextButton}"
                    ContentStringFormat="Standart theme"
                    HorizontalAlignment="Left"
                    Click="StTheme_Click"
                    Margin="0,0,0,5"/>

            <Button x:Name="LghtTheme"
                    Style="{StaticResource TextButton}"
                    ContentStringFormat="Light theme"
                    HorizontalAlignment="Left"
                    Click="LghtTheme_Click"/>

        </StackPanel>
    </Grid>
</UserControl>
